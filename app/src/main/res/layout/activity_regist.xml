<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.licker.mydream.Regist"
    android:background="@drawable/background_ctas_login">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="用户名"
        android:id="@+id/RegistUserText"
        android:layout_above="@+id/RegistPassword"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="密码"
        android:id="@+id/RegistPassText"
        android:layout_alignBottom="@+id/RegistPassword"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_edittext_login"
        android:hint="用户名"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:id="@+id/RegistUsername"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_above="@+id/RegistPassword"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/RegistUserText" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_edittext_login"
        android:id="@+id/RegistPassword"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:password="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/RegistUserText" />
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_login2"
        android:text="注册"
        android:layout_below="@+id/RegistPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/Regist"/>
</RelativeLayout>
